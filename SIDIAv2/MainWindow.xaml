<Window x:Class="SIDIAv2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIDIAv2"
        mc:Ignorable="d"
        Title="MainWindow" Height="760" Width="1280" 
        >
    <Window.Background>
        <ImageBrush ImageSource="assets/img/bg.jpg" AlignmentX="Center" AlignmentY="Center"></ImageBrush>
    </Window.Background>
    <Grid Grid.Row="0" Grid.Column="0">
        <Border CornerRadius="16" Height="400" Width="750" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border.Background>
                <SolidColorBrush Color="white" Opacity="0.5"/>
            </Border.Background>
            <Grid Height="400" Width="750">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1" />
                    <RowDefinition Height="1" />
                </Grid.RowDefinitions>
                <TextBox Height="36"
                         TextWrapping="Wrap" 
                         Text="TextBox" 
                         Width="400" 
                         Background="White"
                         Opacity="0.8"
                         Grid.Row="1" 
                         Margin="171,120,179,-155" 
                         HorizontalContentAlignment="Left" 
                         VerticalContentAlignment="Center"
                         Padding="8,0,0,0"
                         />
                <TextBox Height="36"
                    TextWrapping="Wrap" 
                    Text="Masukkan password..." 
                    Width="400" 
                    Background="White"
                    Opacity="0.8"
                    Grid.Row="1" 
                    Margin="171,202,179,-237" 
                    HorizontalContentAlignment="Left" 
                    VerticalContentAlignment="Center"
                    Padding="8,0,0,0"
                         />
            </Grid>
        </Border>
    </Grid>
</Window>
